<div class="header container-fluid       ">
  <div class="row d-flex p-xl-4 justify-content-between  align-items-center">

  <div class="col-md-4 d-flex   ">
    <h2>Tienda</h2>
  </div>

  <div class="col-md-3 d-flex gap-4   ">
    <a href="/" class="btn btn-primary">Home</a>
    <a href="/carts" class="btn btn-primary">Carrito</a>
    <a href="/chat" class="btn btn-primary">Chat</a>

  </div>
</div>
  </div>
<hr />
<div class="d-flex justify-content-center align-content-center gap-3 p-5">

  {{#if hasPrevPage}}

    <a href="/products?pagina={{prevPage}}" class="btn btn-primary">Pag.Ant.</a>

  {{/if}}
  <a href="/products?pagina=1" class="btn btn-primary">Pag.1</a>

  {{#if hasNextPage}}

    <a href="/products?pagina={{nextPage}}" class="btn btn-primary">Pag. Sig.</a>

  {{/if}}
  <a href="/products?pagina={{totalPages}}" class="btn btn-primary">Ult. Pag.</a>

</div>

<div id="list-group" class="d-grid">
  <div class="row gap-2 justify-content-center pt-5">
      <input type="text" value="{{carrito._id}}" id="carrito" hidden>
    {{#each productos}}
      <div class="col-sm-3">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title"> {{title}}</h5>
            <p class="card-text">Descripcion: {{description}}</p>
            <p class="card-text">Precio: {{price}}</p>
            <button class="btn btn-primary" onclick="comprar('{{_id}}')">Agregar
              a carrito</button>
          </div>
        </div>
      </div>

    {{/each}}


  </div>

</div>

<div class="d-flex justify-content-center align-content-center gap-3 p-5">

  {{#if hasPrevPage}}

    <a href="/products?pagina={{prevPage}}" class="btn btn-primary">Pag.Ant.</a>

  {{/if}}
  <a href="/products?pagina=1" class="btn btn-primary">Pag.1</a>

  {{#if hasNextPage}}

    <a href="/products?pagina={{nextPage}}" class="btn btn-primary">Pag. Sig.</a>

  {{/if}}
  <a href="/products?pagina={{totalPages}}" class="btn btn-primary">Ult. Pag.</a>

</div>

<script src="/js/productos.js">

</script>